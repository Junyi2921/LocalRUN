.roundBtn {
      display: flex;
      width: 40px;
      height: 40px;
      background: #fff;
      border-radius: 100%;
      box-shadow: 0 0 10px #bfbfbf;
      border: 1px solid #cdcdcd;
      justify-content: center;
      align-items: center;
}

.roundBtn .img {
      display: flex;
      width: 60%;
      height: 60%;
}

.getLocation {
      position: fixed;
      top: 20px;
      left: 20px;
}

.myInfo {
      position: fixed;
      top: 20px;
      right: 20px;
}

.editBox{
      position: fixed;
      left: 10px;
      right: 10px;
      bottom: 10px;
      min-height: 200rpx; 
      background: #ffffff;
      -webkit-box-shadow:0 0 10px #bfbfbf;
      box-shadow: 0 0 10px #bfbfbf;
      border: 1px solid #cdcdcd;  
      border-radius: 6px;
      display: flex;
      flex-direction: column;
}
.editBoxItem{
      display: flex;
      flex: 1;
      padding: 15px 10px;
      justify-content: flex-start;
      align-items: center;
}

.editBoxItemLeftIcon{
      display: flex;
      width: 33px;
      height: 30px;
      margin-right: 15px;
}
.editBoxItemAddress{
      display: flex;
      flex: 1;
      height: 100%;
      flex-direction: column;
}
.itemFormatted,.itemAddress{
      display: flex;
      flex: 1;
      justify-content: flex-start;
      align-items: center;
      white-space:normal;
}
.itemFormatted{
      display: flex;
      font-size: 34rpx;
      font-weight: bold;
      color: #30343A;
      margin-bottom: 15px;
}
.itemAddress{
      font-size: 28rpx;
      color: #999999;
}
.editBoxIine{
      height: 1px;
      background: #dbdbdb;
}

